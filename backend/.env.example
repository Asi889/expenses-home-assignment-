# Database Connection
# Replace with your PostgreSQL connection string
DATABASE_CONNECTION_STRING=Host=localhost;Port=5432;Database=invoiceexpensesystem;Username=postgres;Password=YOUR_PASSWORD

# JWT Configuration
# Generate a secure random key (at least 32 characters)
JWT_KEY=YourSuperSecretKeyThatShouldBeAtLeast32CharactersLong!
JWT_ISSUER=InvoiceExpenseSystem
JWT_AUDIENCE=InvoiceExpenseSystem

# OCR Configuration
# Get a free API key from: https://ocr.space/ocrapi/freekey
OCR_SPACE_API_KEY=helloworld
OCR_SPACE_LANGUAGE=auto

# Google Vision API
# Get a free API key from: https://console.cloud.google.com/
# Free tier: 1,000 requests/month
GOOGLE_VISION_API_KEY=YOUR_GOOGLE_VISION_API_KEY
GOOGLE_VISION_USE=true
